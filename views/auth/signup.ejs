<main class="signupMain">

  <form class="sign-up-form" action="/auth/signup" method="POST">
    <label for="new-email">Email</label>
    <input id="new-email" type="email" name="email">
  
    <label for="new-username">Username</label>
    <input id="new-username" type="text" name="newUser">
  
    <label for="new-name">Name</label>
    <input id="new-name" type="text" name="name" value="First & Last">
  
    <label for="new-password">Password</label>
    <input id="new-password" type="password" name="password">
  
    <input type="submit" value="Sign up">
  </form>
</main>